{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "HabitQuest",
  "version": "4.2.0",
  "identifier": "com.renkaistudios.habitquest",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "HabitQuest",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light",
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/habitquest-icon.icns",
      "icons/habitquest-icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Â© 2025 RenKaiStudios. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Gamified habit tracking application",
    "longDescription": "HabitQuest is a gamified habit tracking application by RenKaiStudios that transforms your daily habits into an engaging RPG-like experience. Build lasting positive habits through XP points, rewards, streaks, and progress tracking.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "bundleVersion": "4.1.2",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": false,
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  }
}
